generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id          String @id @default(cuid())
  name        String @unique
  email       String
  plateNumber String?
  role        Role @default(CLIENT)
  stays       Stay[]
}

model Stay {
  id          String @id @default(cuid())
  startHour   DateTime
  endHour     DateTime?
  plateNumber String
  userId      String
  user        User @relation(fields: [userId], references: [id])
  parkingId   String 
  parking     Parking @relation(fields: [parkingId], references: [id])
  parkingSlotId String 
  parkingSlot ParkingSlot @relation(fields: [parkingSlotId], references: [id])

}

model Parking {
  id            String @id @default(cuid())
  name          String
  location      String
  parkignSlots  ParkingSlot[]
  parkingData   ParkingData[]
  stays          Stay[]
}

model ParkingData {
  id             String @id  @default(cuid())
  parkingId      String 
  parking        Parking @relation(fields: [parkingId], references: [id])
  availableSlots Int
  temperature    Decimal
  humidity       Decimal
  date           DateTime
}

model ParkingSlot {
  id           String @id @default(cuid())
  available    Boolean
  ultrasonicId Int
  parkingId    String 
  parking      Parking @relation(fields: [parkingId], references: [id])
  stays         Stay[]
}

enum Role {
  ADMIN
  CLIENT
}