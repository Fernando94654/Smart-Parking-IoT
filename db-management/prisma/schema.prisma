generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String @id @default(cuid())
  name        String
  email       String
  plateNumber String?
  role        Role @default(CLIENT)
  stays       Stay[]
}

model Stay {
  id          String @id @default(cuid())
  parkingId   String 
  parking     parking @relation(fields: [parkingId], references: [id])
  startHour   DateTime
  endHour     DateTime?
  plateNumber String
  parkingSlotId String 
  parkingSlot parkingSlot @relation(fields: [parkingSlotId], references: [id])

}

model parking {
  id            String @id @default(cuid())
  name          String
  location      String
  totalSlots    Int
  parkingData   parkingData[]
}

model parkingData {
  id             String @id  @default(cuid())
  parkingId      String 
  parking        parking @relation(fields: [parkingId], references: [id])
  availableSlots Int
  temperature    Decimal
  humidity       Decimal
  date           DateTime
}

model parkingSlot {
  id           String @id @default(cuid())
  parkingId    String 
  parking      parking @relation(fields: [parkingId], references: [id])
  available    Boolean
  ultrasonicId Int
}

enum Role {
  ADMIN
  CLIENT
}