generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String @id @default(cuid())
  name        String
  email       String
  role        Role @default(CLIENT)
}

model Stay {
  id          String @id @default(cuid())
  startHour   DateTime
  endHour     DateTime?
  plateNumber String
  parkingSlot parkingSlot
}

model parkingSlot {
  id           String @id @default(cuid())
  available    Boolean
}

model parkingData {
  id             String @id  @default(cuid())
  availableSlots Int
  temperature    Decimal
  humidity       Decimal
  date           DateTime
}

enum Role {
  ADMIN
  CLIENT
}